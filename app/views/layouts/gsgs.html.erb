<!doctype html>
<html class="no-js" lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%=@title if @title%></title>
  <link rel="stylesheet" href="/stylesheets/app.css" />
  <script src="/bower_components/modernizr/modernizr.js"></script>
  <link type="text/css" rel="stylesheet" href="/stylesheets/marketing.cssu"/>
  <link href="/stylesheets/foundation-icons.css" rel="stylesheet"></head>
  <body>
    <%= render 'shared/logo' %>
    <!--PC页面菜单-->
    <%= render 'shared/header_yellsun' %>
    
    <div class="row">
      <div class="columns small-12 page-background panel">
        
        <%= render 'shared/gyyx_gsgs' %>
        
        <%= yield %>
      </div>
    </div>
    
    <!-- Footer -->
    <%= render 'shared/footer_yellsun' %> 


    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="/bower_components/foundation/js/foundation.min.js"></script>
    <script src="/js/app.js"></script>

    <script>
      $(document).ready(function(){
        var $mobile_navbar = $('.mobile-navbar');
        if ($mobile_navbar.css('display') == 'block') {
          $('.page-background').removeClass('panel');
        };
      });
    </script>
    
    
  </body>
  </html>