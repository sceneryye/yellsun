
<%= form_for :manager,:url=>admin_user_path, :method=>:put, :html => {:class => "form-horizontal"} do |f| %>


<fieldset>
  <div class="control-group">
    <span>用户名</span>
    
      <span><%= @manager.account.login_name%></span>
    
  </div> 

  <div class="control-group">
  <%= f.label :super, "角色：", :class => "control-label" %>
    <div class="controls">
      <%=f.select(:super, [['超级管理员', '0'], ['审核员', '2'], ['文章发布员', '3']]) %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit '确定', :class => "btn btn-primary" %>
      <%= link_to '返回', admin_tags_path,:class=>"btn" %>
    </div>
  </div>

</fieldset>
<% end %>





    


